--2.1
SELECT * FROM Employee;

SELECT * FROM Employee WHERE LastName != 'King';

SELECT * FROM Employee WHERE FirstName = 'Andrew' AND ReportsTo IS NULL;

--2.2
SELECT * FROM Album
ORDER BY title DESC;

SELECT FirstName FROM customer
ORDER BY city ASC;

