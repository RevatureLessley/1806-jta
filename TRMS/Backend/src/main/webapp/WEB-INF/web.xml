<?xml version="1.0" encoding="UTF-8" ?>

<web-app
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="2.5"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>TRMS-Backend</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>com.revature.trms.servlet.FrontController</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.revature.trms.filter.SecurityFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>








  <servlet>
    <servlet-name>NewRequestServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.NewRequestServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>NewRequestServlet</servlet-name>
    <url-pattern>/NewRequestServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ActiveRequestsServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.ActiveRequestsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ActiveRequestsServlet</servlet-name>
    <url-pattern>/ActiveRequestsServlet</url-pattern>
  </servlet-mapping>

