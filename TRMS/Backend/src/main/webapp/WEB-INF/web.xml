  </servlet>

  <servlet-mapping>
    <servlet-name>ClosedRequestsServlet</servlet-name>
    <url-pattern>/ClosedRequestsServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PendingRequestsServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.PendingRequestsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PendingRequestsServlet</servlet-name>
    <url-pattern>/PendingRequestsServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FileAttachmentServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.FileAttachmentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FileAttachmentServlet</servlet-name>
    <url-pattern>/FileAttachmentServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GradeAttachmentServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.GradeAttachmentServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>GradeAttachmentServlet</servlet-name>
    <url-pattern>/GradeAttachmentServlet</url-pattern>
  </servlet-mapping>

  <!-- Servlets for Navigation -->

  <!--  Servlets for Ajax -->
  <servlet>
    <servlet-name>AuthenticationServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.AuthenticationServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>AuthenticationServlet</servlet-name>
    <url-pattern>/Auth</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EventTypeServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.EventTypeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>EventTypeServlet</servlet-name>
    <url-pattern>/EventTypeServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>GradeFormatServlet</servlet-name>
    <servlet-class>com.revature.trms.servlet.GradeFormatServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
